# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_CLUSTER=your_cluster_name
DB_NAME=your_database_name
MONGODB_URI=mongodb+srv://${DB_USERNAME}:${DB_PASSWORD}@${DB_CLUSTER}.mongodb.net/${DB_NAME}?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,https://your-production-url.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# WebSocket Configuration
WEBSOCKET_PATH=/socket.io/

# Logging
LOG_LEVEL=info
NODE_ENV=development
